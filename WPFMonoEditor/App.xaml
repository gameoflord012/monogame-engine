<Application x:Class="WPFMonoEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFMonoEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextBox:Editable" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <ControlTemplate x:Key="EditorView" TargetType="ContentControl">
            <Border BorderThickness="1" BorderBrush="Black">
                <ContentPresenter/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="RectRender" TargetType="ContentControl">
            
        </ControlTemplate>
    </Application.Resources>
</Application>
