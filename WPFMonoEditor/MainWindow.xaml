<Window x:Class="WPFMonoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMonoEditor"
        xmlns:userControls="clr-namespace:WPFMonoEditor.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition MinWidth="50"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <userControls:EnityView  Grid.Column="0"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <userControls:GameView Grid.Column="2"/>
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
        <userControls:InspectorView Grid.Column="4" />
    </Grid>
</Window>

    